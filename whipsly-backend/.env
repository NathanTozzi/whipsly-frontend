# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/whipsly_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whipsly_db
DB_USER=your_username
DB_PASS=your_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=5000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# External API Keys (for later integration)
NHTSA_API_KEY=your-nhtsa-api-key
EDMUNDS_API_KEY=your-edmunds-api-key
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Frontend URL (for CORS)
FRONTEND_URL=https://whipsly-frontend.onrender.com